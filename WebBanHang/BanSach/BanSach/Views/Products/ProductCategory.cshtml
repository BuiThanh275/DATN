@model IEnumerable<BanDongHo.Models.EF.Product>
@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<style>
    .product {
        width: 90% !important;
        height: 340px !important;
        border-right: solid 1px #e9e9e9;
    }
</style>
@*Khi bấm vào Nhà Xuất Bản  ở trang sản phẩm - Hiển thị từng sản phẩm của Nhà Xuất Bản  trong trang sản phẩm*@
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/home">Trang Chủ</a></li>
                    <li class="active"><a href="/san-pham"><i class="fa fa-angle-right" aria-hidden="true"></i>Sản Phẩm</a></li>
                    @if (ViewBag.CateName != "theloai" && ViewBag.CateName != "price")
                    {
                        <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>@ViewBag.CateName</a></li>
                    }

                </ul>
            </div>

            <!-- Sidebar -->

            <div class="sidebar">
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Nhà Xuất Bản </h5>
                    </div>
                    @if (ViewBag.CateName != "theloai" && ViewBag.CateName != "price")
                    {
                        @Html.Action("MenuLeft", "Menu", new { id = ViewBag.CateId })
                    }
                    else
                    {
                        @Html.Action("MenuLeft", "Menu", new { id = 1999 })
                    }


                </div>
                <h6>Tìm kiếm sản phẩm theo mức giá</h6>
                <label for="price">Chọn mức giá:</label>

                <select id="price">
                    <option value="0">Chọn mức giá</option>
                    <option value="1">< 100,000đ</option>
                    <option value="2">100,000đ - 250,000đ</option>
                    <option value="3">250,000đ - 500,000đ</option>
                    <option value="4"> > 500,000đ </option>

                </select>
                @if (ViewBag.CateName == "price")
                {
                    <input type="text" value="@ViewBag.CateId" hidden id="priceId" />
                }
            </div>

            <!-- Main Content -->

            <div class="main_content">

                <!-- tất cả sản phẩm-->

                <div class="products_iso">
                    <div class="row">
                        <div class="col">
                            <div class="product_sorting_container product_sorting_container_top">
                                <label> Loại Sách</label>
                                @if (ViewBag.CateName == "theloai")
                                {
                                    <input type="text" value="@ViewBag.CateId" hidden id="CateValueId"/>
                                    <select id="myComboBox" style="width:250px" value="@ViewBag.CateId">
                                    </select>
                                }
                                else
                                {
                                    <select id="myComboBox" style="width:250px">
                                    </select>
                                }

                            </div>


                            <!-- từng sản phẩm -->

                            <div class="product-grid">

                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {

                                        var strImge = "";
                                        var img = item.ProductImages.FirstOrDefault(x => x.IsDefault);
                                        if (img != null)
                                        {
                                            strImge = img.Image;
                                        }
                                        <div class="owl-item product_slider_item">
                                            <div class="product-item @item.ProductCategory.Alias">
                                                <div class="product discount product_filter">
                                                    <div class="product_image">
                                                        <img src="@strImge" alt="@item.Title">
                                                    </div>
                                                    <div class="favorite favorite_left"></div>
                                                    @if (item.PriceSale > 0)
                                                    {
                                                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                                                    }
                                                    <div class="product_info">
                                                        <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                                                        @if (item.PriceSale > 0)
                                                        {
                                                            <div class="product_price">@BanDongHo.Common.Common.FormatNumber(item.PriceSale, 0) đ<span>@BanDongHo.Common.Common.FormatNumber(item.Price, 0) đ</span></div>

                                                        }
                                                        else
                                                        {
                                                            <div class="product_price">@BanDongHo.Common.Common.FormatNumber(item.Price, 0) đ</div>
                                                            <div style="display:none;" class="in_product_price">@item.Price</div>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">Thêm Giỏ Hàng</a></div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts{
        <script src="~/Content/assets/js/categories_custom.js"></script>
        <script>
            $(document).ready(function () {
                function fillcombobox() {

                    $.ajax({
                        url: '/products/getproducttypes',
                        type: 'GET',
                        success: function (rs) {
                            if (rs.Data) {
                                debugger;
                                var comboBox = document.getElementById("myComboBox");
                                var valueCombobox = document.getElementById("CateValueId");
                                var result = rs.Data;
                                for (var i = 0; i < result.length; i++) {
                                    var option = document.createElement("option");
                                    var x = result[i].Id;
                                    option.value = result[i].Id; // Sử dụng rs[i].value thay vì data[i].value
                                    option.textContent = result[i].Title; // Sử dụng rs[i].text thay vì data[i].text
                                    comboBox.add(option);
                                }
                                if (valueCombobox) {
                                    comboBox.value = valueCombobox.value;
                                }
                            }
                        }
                    });
                }
                fillcombobox();
                // bắt sự kiện cho tìm kiếm giá
                var comboBox1 = document.getElementById("price");
                var valueCombobox1 = document.getElementById("priceId");
                debugger
                if (valueCombobox1) {
                    comboBox1.value = valueCombobox1.value;
                }
                
                
                comboBox1.addEventListener("change", function () {
                    // Lấy giá trị được chọn
                    var selectedValue = comboBox1.value;
                    debugger
                    var url = `/danh-muc-san-pham/price-${selectedValue}`;
                    window.location.href = url;
                    // Thực hiện các hành động tương ứng với giá trị được chọn
                    console.log("Selected value:", selectedValue);
                });
                var comboBox = document.getElementById("myComboBox");

                comboBox.addEventListener("change", function () {
                    // Lấy giá trị được chọn
                    var selectedValue = comboBox.value;
                    var url = `/danh-muc-san-pham/theloai-${selectedValue}`;
                    window.location.href = url;
                    // Thực hiện các hành động tương ứng với giá trị được chọn
                    console.log("Selected value:", selectedValue);
                });
            });
        </script>
    }

